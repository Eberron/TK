{
  "manifest_version": 3,
  "name": "TK智能总结",
  "version": "2.5.0",
  "description": "智能页面总结工具，支持文本和图片分析",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.deepseek.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TK智能总结"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "quick_summarize": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "快速总结当前页面"
    },
    "toggle_image_analysis": {
      "suggested_key": {
        "default": "Ctrl+Shift+I"
      },
      "description": "切换图片分析模式"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "settings.html",
        "help.html",
        "privacy.html",
        "styles.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}